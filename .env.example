# Email-LLM Configuration
# Copy this file to .env and adjust as needed

# Thunderbird profile path (Snap installation default shown)
EMAIL_LLM_THUNDERBIRD_PROFILE_PATH=~/snap/thunderbird/common/.thunderbird

# LLM Backend: 'lmstudio' or 'ollama'
EMAIL_LLM_LLM_BACKEND=lmstudio

# LM Studio settings
EMAIL_LLM_LMSTUDIO_BASE_URL=http://localhost:1234/v1
EMAIL_LLM_LMSTUDIO_MODEL=local-model

# Ollama settings
EMAIL_LLM_OLLAMA_BASE_URL=http://localhost:11434
EMAIL_LLM_OLLAMA_MODEL=mistral
EMAIL_LLM_OLLAMA_VISION_MODEL=llava:13b
EMAIL_LLM_OLLAMA_EMBEDDING_MODEL=nomic-embed-text

# Embedding model (sentence-transformers)
EMAIL_LLM_EMBEDDING_MODEL=all-MiniLM-L6-v2

# YOLO settings
EMAIL_LLM_YOLO_MODEL=yolov8n.pt
EMAIL_LLM_YOLO_CONFIDENCE_THRESHOLD=0.5

# Processing settings
EMAIL_LLM_CHUNK_SIZE=512
EMAIL_LLM_CHUNK_OVERLAP=50
EMAIL_LLM_MAX_ATTACHMENT_SIZE_MB=50

# Web UI settings
EMAIL_LLM_WEB_HOST=127.0.0.1
EMAIL_LLM_WEB_PORT=8000
